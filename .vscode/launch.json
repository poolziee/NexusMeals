  "version": "0.2.0",
  "compounds": [
    {
      "name": "Attach to All",
      "configurations": ["Attach to API", "Attach to Orders", "Attach to Users", "Attach to Inventory"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Attach to API",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Orders",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9230,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Inventory",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9231,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Users",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9232,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
